<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="Infinity" maxWidth="400.0" prefWidth="400.0" spacing="2.0" styleClass="menu-box" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bytecrowd.dokupository.gui.controllers.menu.MenuController">
    <children>

        <Label text="%label.app.name" textFill="#16a085">
            <font>
                <Font size="23.0" />
            </font>
        </Label>
        <ImageView fx:id="logo" fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" >
            <image>
                <Image url="@../../img/logo.png" />
            </image>
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
        </ImageView>
        <JFXButton fx:id="addDocumentationEntryBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.menu.manage.documentation" />
        <JFXButton fx:id="generateDocumentationEntryBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.menu.generate.documentation" />
        <JFXButton disable="true" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.base.data">
            <VBox.margin>
                <Insets bottom="5.0" top="20.0" />
            </VBox.margin>
        </JFXButton>
        <JFXButton fx:id="menuApplicationBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.application" />
        <JFXButton fx:id="menuVersionBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.version" />
        <JFXButton fx:id="menuCommitBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.commits.ignored" />
        <JFXButton fx:id="menuWortTemplateBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.wordtemplate" />
        <JFXButton fx:id="menuUserBtn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="button-menu" text="%label.user" />

    </children>
</VBox>
